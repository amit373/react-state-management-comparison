{
  "name": "react-state-management-complete",
  "version": "1.0.0",
  "description": "Monorepo comparing 7 React state management solutions with CRUD apps",
  "private": true,
  "scripts": {
    "install:all": "pnpm -w install",
    "build:all": "pnpm -r --parallel run build",
    "dev:all": "pnpm -r --parallel run dev",
    "lint:all": "pnpm -r run lint",
    "format:all": "pnpm -r run format",
    "preview:all": "pnpm -r --parallel run preview",
    "bootstrap": "pnpm -w install && pnpm -w run build:all"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.2",
    "concurrently": "^8.2.2",
    "playwright": "^1.57.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite-tsconfig-paths": "^5.1.1"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=8.0.0"
  }
}
